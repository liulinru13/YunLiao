<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mmrx.yunliao.view.fragment.AboutAuthorFragment">

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <com.zhy.autolayout.AutoRelativeLayout
            android:id="@+id/title_layout"
            android:layout_width="wrap_content"
            android:layout_height="330px"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/image1"
                android:layout_width="600px"
                android:layout_height="280px"
                android:layout_marginTop="50px"
                android:scaleType="fitXY"
                android:src="@drawable/yunliao_load_icon"/>

            <ImageView
                android:id="@+id/image2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:scaleType="fitXY"
                android:src="@drawable/yunliao_auth"
                android:layout_toRightOf="@id/image1"
                android:layout_alignParentBottom="true"/>

        </com.zhy.autolayout.AutoRelativeLayout>


    </com.zhy.autolayout.AutoRelativeLayout>

    <com.zhy.autolayout.AutoRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_layout"
        android:layout_centerVertical="true"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="57px"
            android:layout_marginTop="50px"
            android:layout_marginBottom="20px"
            android:gravity="center"
            android:text="作者: 刘林儒"/>

        <TextView
            android:id="@+id/text2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text1"
            android:textSize="57px"
            android:layout_marginTop="50px"
            android:layout_marginBottom="20px"
            android:gravity="center"
            android:text="qq: 695985238"/>

        <TextView
            android:id="@+id/text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text2"
            android:textSize="57px"
            android:layout_marginTop="50px"
            android:layout_marginBottom="20px"
            android:gravity="center"
            android:text="邮箱: liulinru13@126.com"/>

        <TextView
            android:id="@+id/text4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/text3"
            android:textSize="57px"
            android:layout_marginTop="50px"
            android:layout_marginBottom="20px"
            android:gravity="center"
            android:text="github: https://github.com/liulinru13"/>

    </com.zhy.autolayout.AutoRelativeLayout>

</FrameLayout>
