<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:minHeight="100dp">
    <LinearLayout
        android:id="@+id/back"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center|right"
        android:weightSum="2">

        <TextView
            android:id="@+id/sms_item_mark"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="mark"
            android:background="#b3b1b1"/>

        <TextView
            android:id="@+id/sms_item_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:text="delete"
            android:background="#df0d0d"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/front"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff">

        <ImageView
            android:id="@+id/sms_itme_unread_icon"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#ed1a1a"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="3"
            android:layout_weight="6">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/sms_item_addr_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="13116786933"
                    android:gravity="center"
                    android:layout_alignParentLeft="true" />

                <TextView
                    android:id="@+id/sms_item_date_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="2015/08/08"
                    android:gravity="center"
                    android:layout_alignParentRight="true" />

            </RelativeLayout>

            <TextView
                android:id="@+id/sms_item_content"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:maxLines="2"
                android:ellipsize="end"
                android:gravity="center_vertical"
                android:text="contant"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/sms_itme_right_arrow_img"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="#1a1eed"
            android:layout_weight="0.5" />


    </LinearLayout>

</FrameLayout>
