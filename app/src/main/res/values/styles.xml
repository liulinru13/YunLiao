<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--白天主题-->
    <style name="dayTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/text_color_day</item>

        <item name="custom_background">@color/white</item>
        <item name="custom_textcolor">@color/gray</item>
        <!-- 侧边栏-->
        <item name="custom_nav_color">@drawable/side_nav_bar</item>
        <!-- 按钮背景-->
        <item name="custom_bn_background">@drawable/bn_round_corner_rectangle_day</item>
        <!-- 边框背景-->
        <item name="custom_border_backgound">@drawable/border_sms_edit_day</item>
        <!-- label 文字颜色-->
        <item name="custom_label_text_color">@color/text_label_color_day</item>
        <!-- edittext hint 颜色-->
        <item name="custom_textcolorhint">@color/hintTextColor</item>
        <!--list item-->
        <item name="custom_bn_sms_list_item_background">@color/white</item>
        <item name="custom_bn_sms_list_item_back_mark_background">@color/bn_sms_list_item_mark_background_day</item>
        <item name="custom_bn_sms_list_item_back_delete_background">@color/bn_sms_list_item_delete_background_day</item>
        <item name="custom_bn_sms_list_item_back_text_color">@color/bn_sms_list_item_back_text_day</item>
        <item name="custom_sms_list_item_text_color">@color/sms_list_item_text_color</item>
        <item name="custom_sms_list_item_1px_color">@color/sms_list_item_1px_color</item>
        <item name="custom_sms_list_item_select_bn_color">@color/sms_list_item_select_bn_color</item>

        <item name="custom_sms_edit_edit_background">@drawable/border_sms_edit_day</item>
    </style>
    <!--夜间主题-->
    <style name="nightTheme" parent="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary_night</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_night</item>
        <item name="colorAccent">@color/colorAccent_night</item>

        <item name="custom_background">@color/background_night</item>
        <item name="android:textColor">@color/text_color_night</item>
        <item name="custom_textcolor">@color/text_color_night</item>
        <!-- 侧边栏-->
        <item name="custom_nav_color">@drawable/side_nav_bar_night</item>
        <!-- 按钮背景-->
        <item name="custom_bn_background">@drawable/bn_round_corner_rectangle_night</item>
        <!-- 边框背景-->
        <item name="custom_border_backgound">@drawable/border_sms_edit_night</item>
        <!-- label 文字颜色-->
        <item name="custom_label_text_color">@color/text_label_color_night</item>

        <!-- edittext hint 颜色-->
        <item name="custom_textcolorhint">@color/hintTextColor_night</item>
        <!--list item-->
        <item name="custom_bn_sms_list_item_background">@color/sms_list_item_background_night</item>
        <item name="custom_bn_sms_list_item_back_mark_background">@color/bn_sms_list_item_mark_background_day</item>
        <item name="custom_bn_sms_list_item_back_delete_background">@color/bn_sms_list_item_delete_background_day</item>
        <item name="custom_bn_sms_list_item_back_text_color">@color/bn_sms_list_item_back_text_day</item>
        <item name="custom_sms_list_item_text_color">@color/text_label_color_night</item>
        <item name="custom_sms_list_item_1px_color">@color/sms_list_item_1px_color_night</item>
        <item name="custom_sms_list_item_select_bn_color">@color/sms_list_item_select_bn_color</item>

        <item name="custom_sms_edit_edit_background">@drawable/border_sms_edit_night</item>

        <item name="android:actionMenuTextColor">@android:color/white</item>
    </style>

    <style name="CustomizeStyle03">
        <item name="imageScaleType">center</item>
        <item name="image">@drawable/ic_launcher</item>
        <item name="cborderWidth">0dp</item>
        <item name="cborderColor">#ffffffff</item>
    </style>
</resources>
