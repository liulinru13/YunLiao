<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item >
        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/md_bg_corner_radius"
                android:left="@dimen/md_bg_corner_radius"
                android:right="@dimen/md_bg_corner_radius"
                android:top="@dimen/md_bg_corner_radius"/>
            <solid
                android:color="?attr/custom_bn_background"/>
            <corners
                android:radius="@dimen/shap_corner_radius"/>
        </shape>
    </item>

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <padding
                android:bottom="@dimen/md_bg_corner_radius"
                android:left="@dimen/md_bg_corner_radius"
                android:right="@dimen/md_bg_corner_radius"
                android:top="@dimen/md_bg_corner_radius"/>
            <solid
                android:color="?attr/custom_bn_background_pressed"/>
            <corners
                android:radius="@dimen/shap_corner_radius"/>
        </shape>
    </item>
</selector>